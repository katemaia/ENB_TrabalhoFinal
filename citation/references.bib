	keywords = {phenology, diversity-stability debate, resilience, Asymmetry, intraguild   competition, season length},
	pages = {198--208}
}

@article{ventim_host-parasite_2012,
	title = {Host-parasite associations and host-specificity in haemoparasites of reed bed passerines},
