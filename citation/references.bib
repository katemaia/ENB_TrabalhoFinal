	keywords = {feeding ecology, nitrogen isotopes, trophic position, individual specialization, mixing models, migration, sea fish community, carbon isotopes, dietary analysis, ecotoxicology, food web analysis, individual diet   specialisation, sharks carcharhinus-leucas, tissue discrimination factors},
	pages = {635--643}
}

@article{layman_characterizing_2012,
