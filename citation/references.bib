	author = {Vrede, Tobias and Drakare, Stina and Eklov, Peter and Hein, Arne and Liess, Antonia and Olsson, Jens and Persson, Jonas and Quevedo, Mario and Stabo, Henrik Ragnarsson and Svanback, Richard},
