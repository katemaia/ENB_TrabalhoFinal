	author = {Villéger, Sébastien and Mason, Norman W. H. and Mouillot, David},
	month = aug,
	year = {2008},
	keywords = {Lido},
	pages = {2290--2301},
	file = {Full Text PDF:C\:\\Users\\user\\Zotero\\storage\\V972NGQR\\Villéger et al. - 2008 - New Multidimensional Functional Diversity Indices .pdf:application/pdf;Snapshot:C\:\\Users\\user\\Zotero\\storage\\D9RS96UV\\abstract.html:text/html}
}

