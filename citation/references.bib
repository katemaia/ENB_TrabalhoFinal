	author = {File, Amanda L. and Klironomos, John and Maherali, Hafiz and Dudley, Susan A.},
	month = sep,
	year = {2012},
	note = {WOS:000309973900050},
	keywords = {cooperation, colonization, arbuscular mycorrhizal fungi, community composition, trade},
	pages = {e45648}
}

@article{fabina_transmission_2012,
	title = {Transmission {Mode} {Predicts} {Specificity} and {Interaction} {Patterns} in {Coral}-{Symbiodinium} {Networks}},
