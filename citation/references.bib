	month = nov,
	year = {2014},
	note = {WOS:000344625500021},
	keywords = {productivity, animal personality, determines, efficiency, differentiation, temperament, genetic diversity, anelosimus-studiosus, behavioural syndrome, division of labour, social   spiders, task specialization},
