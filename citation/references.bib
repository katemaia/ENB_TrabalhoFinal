	keywords = {spain, diet, Aquila fasciata, bonellis   eagles, emerging infectious disease, emerging infectious-disease, foraging   theory, hemorrhagic-disease, Oryctolagus cuniculus, rabbit haemorrhagic disease, territory, western Europe},
