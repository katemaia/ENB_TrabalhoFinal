	author = {Yoshikawa, Tetsuro and Isagi, Yuji},
	month = jul,
	year = {2012},
	note = {WOS:000305614300006},
	keywords = {fruit-eating birds, rain-forest, avian frugivores, temperate forest},
	pages = {1041--1052}
}

@article{lima_patterns_2012,
