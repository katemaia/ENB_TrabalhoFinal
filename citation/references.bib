	keywords = {insects, predators, host specificity, trophic cascade, plant-herbivore   interactions, tritrophic interactions},
	pages = {9521--9526}
}

@article{vamosi_pollinators_2014,
	title = {Pollinators visit related plant species across 29 plant-pollinator networks},
