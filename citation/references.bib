	journal = {Perspectives in Plant Ecology, Evolution and Systematics},
	author = {Pessoa, Michaele S. and Hambuckers, Alain and Benchimol, Maíra and Rocha-Santos, Larissa and Bomfim, Jamille A. and Faria, Deborah and Cazetta, Eliana},
	month = oct,
