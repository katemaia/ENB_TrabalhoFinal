	number = {6},
	urldate = {2016-11-30},
	journal = {Journal of Animal Ecology},
	author = {Reichert, Brian E. and Fletcher, Robert J. and Cattau, Christopher E. and Kitchens, Wiley M.},
	month = nov,
	year = {2016},
	pages = {1563--1573},
	file = {Full Text PDF:C\:\\Users\\user\\Zotero\\storage\\39ASX7BI\\Reichert et al. - 2016 - Consistent scaling of population structure across .pdf:application/pdf;Snapshot:C\:\\Users\\user\\Zotero\\storage\\5K9E5WVI\\abstract.html:text/html}
}

