	month = may,
	year = {2012},
	note = {WOS:000302355100010},
	keywords = {islands, speciation, adaptive radiation, araneae, convergent evolution, sexual selection, convergence - ecological speciation - genital trait evolution - habitat   specialization - natural selection - parallel evolution - standing   genetic variation, genitalia, phylogenetic   analysis, web-building spiders},
	pages = {123--136}
}

@article{lopez-rodriguez_digestive_2012,
