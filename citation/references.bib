	author = {Tuck-Po, Lye},
	month = jun,
	year = {2013},
	note = {WOS:000327554500019},
	keywords = {history, southeast-asia, exchange, hunter-gatherers, african, foragers, foragers and farmers, intergroup relations, negritos, orang asli, prehistory, semang},
	pages = {417--443}
}

@article{brandner_comparative_2013,
	title = {Comparative feeding ecology of invasive {Ponto}-{Caspian} gobies},
