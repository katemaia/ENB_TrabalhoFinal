	author = {Hammerschlag-Peyer, Caroline M. and Layman, Craig A.},
	month = apr,
	year = {2012},
	note = {WOS:000303287100003},
	keywords = {niche width, stable-isotope ratios, secondary   production, south florida, trophic-level},
