	author = {Westphal, Catrin and Bommarco, Riccardo and Carré, Gabriel and Lamborn, Ellen and Morison, Nicolas and Petanidou, Theodora and Potts, Simon G. and Roberts, Stuart P. M. and Szentgyörgyi, Hajnalka and Tscheulin, Thomas and Vaissière, Bernard E. and Woyciechowski, Michal and Biesmeijer, Jacobus C. and Kunin, William E. and Settele, Josef and Steffan-Dewenter, Ingolf},
