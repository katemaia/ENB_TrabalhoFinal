	journal = {Journal of Applied Ecology},
	author = {Barak, Rebecca S. and Williams, Evelyn W. and Hipp, Andrew L. and Bowles, Marlin L. and Carr, Gabriela M. and Sherman, Robert and Larkin, Daniel J.},
