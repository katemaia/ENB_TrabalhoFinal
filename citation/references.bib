	keywords = {Stable isotopes, eastern north pacific, laboratory experiments, bathymetric trends, Bentho-pelagic coupling, Body-size, Carbon, coryphaenoides-armatus, demersal fishes, depth zonation, Nitrogen, Ontogenetic diet shifts, stomach content},
