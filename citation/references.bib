	keywords = {secondary production, individual specialization, predation risk, life-history evolution, habitat   fragmentation, assemblage structure, Bahamas mosquitofish, hydrologic   connectivity, mosquitofish gambusia-hubbsi, niche   variation, postpleistocene radiation, RNA/DNA ratios, tidal creeks},
	pages = {3298--3308}
