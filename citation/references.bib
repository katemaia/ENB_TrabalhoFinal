@article{ness_phylogenetic_2011,
	title = {Phylogenetic distance can predict susceptibility to attack by natural enemies},
	volume = {120},
	issn = {1600-0706},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1600-0706.2011.19119.x/abstract},
