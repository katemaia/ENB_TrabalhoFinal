	number = {6},
	journal = {Journal of Animal Ecology},
	author = {Moleon, Marcos and Sebastian-Gonzalez, Esther and Sanchez-Zapata, Jose A. and Real, Joan and Pires, Mathias M. and Gil-Sanchez, Jose M. and Bautista, Jesus and Palma, Luis and Bayle, Patrick and Guimaraes, Paulo R. and Beja, Pedro},
