	note = {WOS:000314474100003},
	keywords = {identification, degradation, symbiosis, sea, symbionts, wood, bivalves, deep-sea ecology, Deltaproteobacteria, gills, mollicutes, Mollicutes, Polyplacophora, sunken wood, whale fall},
	pages = {552--567}
}

@article{joppa_modeling_2013,
