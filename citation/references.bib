	keywords = {abundance, resources, bees, pollen, flies diptera, pollen limitation, landscape structure, bumblebees, hoverflies, hedgerows, agri-environmental schemes, conventional farming, intensive grasslands, seed   production, specialization asymmetry, Trifolium sp, visiting insects},
