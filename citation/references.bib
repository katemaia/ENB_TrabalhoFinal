@article{van_rijn_nectar_2016,
	title = {Nectar accessibility determines fitness, flower choice and abundance of hoverflies that provide natural pest control},
	volume = {53},
	copyright = {© 2015 The Authors. Journal of Applied Ecology © 2015 British Ecological Society},
	issn = {1365-2664},
