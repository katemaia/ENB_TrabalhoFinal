	note = {WOS:000209057800017},
	keywords = {trophic interactions, Ecological niche, delta-n-15, mcmurdo sound, delta-c-13, Southern Ocean, Stable   isotopes, diet composition, Benthic, Pelagic, foraging areas, Habitat, weddell   sea},
