	month = sep,
	year = {2011},
	note = {WOS:000294456000006},
	keywords = {network analysis, organizations, organizational ecology, civil society, coordinating bodies, Mexico City, NGOization, ngos, popular movements, Sao Paulo},
	pages = {415--449}
}

