	keywords = {host range, infections, sequences, avian malaria, avian malaria parasites, blood parasites, cytochrome-b   lineages, Haemoproteus, haemosporidian, host-parasite association, local transmission, plasmodium, Plasmodium, specialists   versus generalists, still},
