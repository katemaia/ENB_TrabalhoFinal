	urldate = {2019-01-07},
	journal = {Journal of Applied Ecology},
	author = {Law, Elizabeth A. and Bryan, Brett A. and Meijaard, Erik and Mallawaarachchi, Thilak and Struebig, Matthew J. and Watts, Matthew E. and Wilson, Kerrie A.},
