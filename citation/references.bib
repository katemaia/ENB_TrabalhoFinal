	pages = {e0121275},
	file = {Full Text PDF:C\:\\Users\\user\\Zotero\\storage\\UU7HPSP9\\Dáttilo et al. - 2015 - Tropical Forest Fragmentation Affects Floral Visit.pdf:application/pdf;Snapshot:C\:\\Users\\user\\Zotero\\storage\\MK8UZ8MA\\article.html:text/html}
