	keywords = {feeding ecology, delta-n-15, diet, Seasonal variation, delta-c-13, Stable isotopes, carbon, Resource partitioning, stable-isotope signatures, comparative foraging ecology, Isotopic niche, marine   food-web, Niche overlap, siber, south georgia, Trophic   position},
