	keywords = {zooplankton, fish, Stable isotope, variability, growth, carbon, Trophic ecology, thunnus-thynnus, Balearic Sea, Bullet tuna, C:N   ratio, Daily growth, herring clupea-harengus, Larvae, sardina-pilchardus},
